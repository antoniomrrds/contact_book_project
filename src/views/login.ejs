<%- include('includes/head'); -%>
  <%- include('includes/nav'); -%>
    <di class="container">
      <div class="row">
        <div class="col-lg-2"></div>

        <div class="col-lg-8 my-2">
          <h1 class="text-center ">Create Account or Login</h1>
          <p class="text-center lead">Login or create your account below</p>

          <%- include('includes/messages') %>

          <div class="row">
            <div class="col-lg">
              <h4>Make your registration</h4>

              <p>If you don't have an account yet, fill in the form below:</p>
              <form action="login/register" method="post">
                <input type="hidden" name="_csrf" value=<%= csrfToken %>>
                <div class="form-group">
                  <label>Your e-mail</label>
                  <input type="email" class="form-control" name="email">
                </div>
                <div class="form-group">
                  <label>Your password</label>
                  <input type="password" class="form-control" name="password">
                </div>
                <button type="submit" class="btn btn-success my-3">Create my account</button>
              </form>


            </div>
            <div class="col-lg ">
              <h4>Make your login</h4>
              <p>If you already have an account, login below:</p>
              <form action="/login" method="post">
                <input type="hidden" name="_csrf" value=<%= csrfToken %>>
                <div class="form-group">
                  <label>Your e-mail</label>
                  <input type="email" class="form-control" name="email">
                </div>
                <div class="form-group">
                  <label>Your password</label>
                  <input type="password" class="form-control" name="password">
                </div>
                <button type="submit" class="btn btn-primary my-3">Sign in</button>
              </form>
            </div>
          </div>
        </div>

        <div class="col-lg-2"></div>
      </div>
    </di>
    <%- include('includes/footer'); -%>