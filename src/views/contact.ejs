<%- include('includes/head'); -%>
  <%- include('includes/nav'); -%>
    <di class="container">
      <div class="row">
        <div class="col-lg-2"></div>

        <div class="col-lg-8 my-2">
          <h1 class="text-center ">Contact</h1>
          <p class="text-center lead">Create or edit your contact below.</p>

          <%- include('includes/messages') %>
          <% if(contact._id){%>
            <form action="/contact/<%= contact._id %>" method="post">
          <% }else{%>
            <form action="/contact" method="post">
          <%}%>
            <input type="hidden" name="_csrf" value=<%= csrfToken %>>
            <div class="form-group my-3">
              <label>Name</label>
              <input value="<%= contact.name%>" type="text" class="form-control" name="name">
            </div>
            <div class="form-group  my-3">
              <label>LastName</label>
              <input type="text" value="<%= contact.lastName%>" class="form-control" name="lastName">
            </div>
            <div class="form-group  my-3">
              <label>E-mail</label>
              <input value="<%= contact.email %>"  type="email" class="form-control" name="email">
            </div>
            <div class="form-group mt-3">
              <label>Telephone</label>
              <input value="<%= contact.telephone %>"  type="tel" class="form-control" name="telephone">
              
            </div>
            <button type="submit" class="btn btn-primary my-3">Create</button>
          </form>


        </div>

        <div class="col-lg-2"></div>
      </div>
    </di>
    <%- include('includes/footer'); -%>